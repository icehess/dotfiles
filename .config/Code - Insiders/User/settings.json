// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "Fantasque Sans Mono, 'Ubuntu Mono', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 15,
    "editor.fontWeight": "100",
    "editor.formatOnPaste": false,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.occurrencesHighlight": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "boundary",
    "editor.smoothScrolling": false,
    "editor.tokenColorCustomizations": {
        "[Material Theme]": {
            "keywords": "#C792EA",
            "textMateRules": [
                {
                    "name": "Keyword, Storage",
                    "scope": [
                        "keyword",
                        "storage.type",
                        "storage.modifier"
                    ],
                    "settings": {
                        "foreground": "#89DDFF"
                    }
                }
            ]
        }
    },
    "erlang.enableExperimentalAutoComplete": true,
    "extensions.autoUpdate": true,
    "explorer.autoReveal": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": false,
    "git.autorefresh": false,
    "materialTheme.cache.workbench.settings": {},
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "terminal.external.linuxExec": "mate-terminal",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\bash.exe",
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/ebin": true
    },
    "scm.alwaysShowProviders": false,
    "window.restoreWindows": "all",
    "window.menuBarVisibility": "toggle",
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": true,
    "workbench.colorCustomizations": {
        "editor.selectionHighlightBackground": "#263238",
        "editor.selectionHighlightBorder": "#F8E71C",
        "editor.findMatchBackground": "#496d80",
        "editor.findMatchBorder": "#F8E71C80",
        "editor.findMatchHighlightBackground": "#496d80"
    },
    "workbench.colorTheme": "Material Theme",
    "workbench.editor.closeOnFileDelete": false,
    "workbench.iconTheme": "eq-material-theme-icons",
    "workbench.sideBar.location": "left",
    "workbench.statusBar.feedback.visible": false,
    "cSpell.userWords": [
        "Erlang"
    ],
}
